<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
            android:id="@+id/search_results_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#FF8800"
            android:typeface="serif"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/search_results_title"
            android:textSize="24sp" />
    
    <ScrollView
    android:id="@+id/scrollResults"
    android:scrollbars="vertical"
    android:layout_below="@id/notifications_title"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FFF8DC"
    >

        <LinearLayout
            android:id="@+id/hold_search_results_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- TextViews will be programmatically -->
        </LinearLayout>

	</ScrollView>
    

</RelativeLayout>
